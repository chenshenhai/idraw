{
  "name": "root",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "vite-node ./scripts/dev/vite.ts",
    "dev:rollup": "node ./scripts/dev.js",
    "build": "npm run build:src && npm run build:min",
    "build:src": "node ./scripts/build.js",
    "build:min": "node ./scripts/minify.js",
    "snapshot": "node ./scripts/build.js && node ./scripts/snapshot.js",
    "e2e": "mocha --exit ./__tests__/e2e.test.js",
    "init": "lerna bootstrap --npm-client=cnpm && npm run build:src",
    "clear": "rm -rf ./packages/*/dist/ & rm -rf ./packages/*/node_modules/",
    "jest": "jest --config jest.config.js",
    "test": "lerna bootstrap --no-ci && npm run build && npm run jest && npm run e2e"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@microsoft/api-extractor": "^7.29.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/node": "^18.6.3",
    "babel-jest": "^28.1.3",
    "chalk": "^5.0.1",
    "enquirer": "^2.3.6",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "http-server": "^14.1.1",
    "jest": "^28.1.3",
    "jimp": "^0.16.1",
    "koa-compose": "^4.1.0",
    "lerna": "^5.3.0",
    "less": "^4.1.3",
    "mocha": "^10.0.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^6.0.0",
    "postcss": "^8.4.14",
    "puppeteer": "^16.0.0",
    "rollup": "^2.77.2",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.32.1",
    "serve-handler": "^6.1.3",
    "terser": "^5.14.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vite-node": "^0.20.3"
  }
}
